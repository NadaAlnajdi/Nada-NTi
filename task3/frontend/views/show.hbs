{{>header}}
{{>navbar}}
{{#if tasktemp}} 
<div class="container-fluid">
            <div class="container mx-auto" style="width: 350px;">
                <header class="text-center fs-3 text-dark mb-4">Task Info</header>
        <div class="card bg-dark text-white">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">{{tasktemp.name}}</h5>
            <div class="d-flex  border px-3 pt-2 mb-2">
            <p class="card-text text-center">ID &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;: &nbsp;</p>
            <p class="card-text text-center"> {{tasktemp.id}}</p>
            </div>
            <div class="d-flex  border px-3 pt-2 mb-2">
            <p class="card-text w-50 text-center">Title &nbsp; &nbsp; &nbsp; : &nbsp;</p><br>
            <p class="card-text text-center">{{tasktemp.title}}</p>
            </div>
            <div class="border px-3 pt-2 mb-2">
            <p class="card-text text-left">Content :</p>
            <p class="card-text">{{tasktemp.content}}</p>
            </div>
            <div class="d-flex border px-3 pt-2 mb-4">
            <p class="card-text text-center">Status &nbsp; &nbsp;: &nbsp;</p>
            <p class="card-text text-center">{{tasktemp.status}}</p>
            </div>
            <div class="text-center">
                <a href="/" class="btn btn-outline-light px-4">Back</a>
            </div>
        </div>
        </div>
        </div>
{{else}}
<div class="alert alert-danger w-50 mx-auto my-2">
    <p>no data found</p>
</div>
{{/if}}
{{>footer}}